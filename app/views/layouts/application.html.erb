<!DOCTYPE html>
<html>
  <head>
    <title>WellnessHub</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>


  </head>


  <body>
<div class="nav-bar">
<ul>

    <% if session[:user_id]%>
    <li>
          <%= link_to "My Wellness Hub", user_path(session[:user_id]) %> </h3></li>

          <% end %>
    <li> <%= link_to "Browse Wellness Posts", posts_path %> </li>
    <% if session[:user_id]%>
      <li> <%= link_to "Set a New Intention", new_intention_path %> </li>
    <% end %>
    <% if session[:user_id] %>
    <li><%= link_to "Share a Resource", new_post_path %> </h3></li>
      <li> <%= link_to "Logout", logout_path %></li>
    <% end %>
  <% if @user && @user.id %>
  <li> Logged in as <%=@user.name%>
    <button> <%= link_to "Edit User", edit_user_path(@user) %> </button></li>
  <% end %>
</ul>
    </div>


    <%= yield %>

  </body>
</html>
